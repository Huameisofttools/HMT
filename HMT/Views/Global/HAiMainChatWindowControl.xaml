<UserControl x:Class="HMT.Views.Global.HAiMainChatWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:mdxam="clr-namespace:MdXaml;assembly=MdXaml"             
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Name="MyToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Name="scrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Grid.Row="0" Margin="10">
            <StackPanel Name="chatPanel" Width="600" />
        </ScrollViewer>
        <TextBox Name="inputBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="660" Height="100" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <!--<TextBox Name="inputBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Width="660" Height="100" VerticalAlignment="Center"/>-->
            <Button Name="sendBtn" Content="Send" Width="100" Height="40" Click="button1_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
