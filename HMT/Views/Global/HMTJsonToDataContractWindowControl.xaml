<UserControl x:Class="HMT.Views.Global.HMTJsonToDataContractWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Grid.Column="0" Margin="10">
            <TextBox x:Name="jsonInput" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" Height="250" AcceptsTab="True"/>
            <Label>Class Name</Label>
            <TextBox x:Name="className" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" />
            <Button x:Name="loadButton" Content="Load JSON" Margin="5" Click="LoadJsonButton_Click"/>
            <Button x:Name="generateButton" Content="Generate X++" Margin="5" Click="GenerateButton_Click"/>
            <TreeView x:Name="jsonTreeView" Grid.Column="1" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>